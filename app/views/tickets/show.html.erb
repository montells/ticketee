<div class="ticket">
  <h1><%= @project.name %></h1>
  <h2><%= @ticket.name %></h2>

  <%= render @ticket %>

  <%= link_to 'Edit Ticket', [:edit, @project, @ticket],
              class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to 'Delete Ticket', [@project, @ticket],
              method: :delete,
              data: { "turbo-method": :delete, turbo_confirm: 'Are you sure you want to delete this ticket?' },
              class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to 'Back to Project', @project, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to 'Back to Projects', projects_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
</div>